@{
    ViewBag.Title = "Vehicle Tracing System";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-6">
        <h3><i class='fa fa-list text-primary' aria-hidden='true'></i>&nbsp;Vehicles Status</h3>
    </div>
    <div class="col-md-6">
        <h3> @Html.ActionLink("Listener View", "Listener", "Home", new { @class = "pull-right" })</h3>
</div>
</div>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="ddl-customer">Customer</label>
                <select name="ddl-customer" id="ddl-customer" class="form-control">
                    <option value="-1">----Select----</option>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Status</label>
                <div id="btn-status" class="btn-group" data-toggle="buttons" style="display:block">
                    <label class="btn btn-success active">
                        <input type="radio" name="options" id="rd-Online" autocomplete="off" value="1"> Online
                    </label>
                    <label class="btn btn-danger">
                        <input type="radio" name="options" d="rd-Offline" autocomplete="off" value="2"> Offline
                    </label>
                    <label class="btn btn-default">
                        <input type="radio" name="options" id="rd-All" autocomplete="off" value="-1"> ALL
                    </label>
                </div>
            </div>
        </div>
    </div>


    <hr />
    <div class="row">
        <div class="col-md-12">
            <div id="tblVehicles"></div>
        </div>
    </div>
</div>
